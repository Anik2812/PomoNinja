{
    "manifest_version": 2,
    "name": "PomoPro Timer",
    "version": "1.0",
    "description": "An interactive and cool Pomodoro timer extension",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "storage",
      "notifications"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }